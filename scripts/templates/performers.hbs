<div class="jumbotron jumbotron-bg1 jumbotron-dark jumbotron-performers jumbotron-color-2  jumbotron-page-header">
  <div class="container">
    <div class="row centered">
      <div class="col-lg-8 col-lg-offset-2">
      <h1>Performers</h1>
      </div>
    </div><!-- row -->
  </div><!-- container -->
</div><!-- headerwrap -->
<div class="container main-content">
  <p class="lead">Performers subject to change...</p>
  <div class="row">
    {{#each performer in controller}}
    <div class="col-xs-6 col-sm-6 col-sm-4 col-md-3 col-lg-2 performer-box">
      <div class="performer-thumbnail">
        {{#link-to "performer" performer }}
        <img class="img-responsive" width="300" height="300" {{bind-attr src="performer.headshot300" }} />
        {{/link-to}}
      </div>
      <legend>
        {{#link-to "performer" performer }}
          {{{ performer.Name }}}
        {{/link-to}}
      </legend>
    </div>
    {{/each}}
  </div>
</div>
